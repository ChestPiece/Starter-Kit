# Supabase Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Optional: Site URL for production
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# For local development with Supabase CLI, these will be:
# NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key-from-supabase-start

# CSRF Protection
# Generate a strong 32-byte base64 secret: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
CSRF_SECRET=your-csrf-secret-key-change-this

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
ENABLE_EXTERNAL_LOGGING=false
EXTERNAL_LOG_ENDPOINT=https://your-logging-service.com/api/logs
EXTERNAL_LOG_TOKEN=your-external-logging-token
MAX_LOG_FILE_SIZE=10485760
MAX_LOG_FILES=5


